{
    "app-id": "com.petrisch.distance",
    "runtime": "org.gnome.Platform",
    "runtime-version": "40",
    "sdk": "org.gnome.Sdk",
    "command": "distance",
    "finish-args": [
        "--socket=wayland",
        "--system-talk-name=net.hadess.SensorProxy",
        "--allow=bluetooth",
        "--filesystem=host"
    ],
    "modules":
    [
        "python3-requests.json",
        "python3-pybluez.json",
        {
            "name": "distance",
            "buildsystem": "meson",
            "builddir": true,
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
